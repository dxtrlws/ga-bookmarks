

<h1>My Bookmarks</h1>

<%= link_to("Add Bookmark", new_bookmark_path, class: 'btn btn-primary')  %>
<br>
<br>

<% if @bookmarks.empty? %>
    <%= "Looks like you don't have any bookmarks. Click the 'Add Bookmark' button above to get started." %>
    <% else %>
    <% end %>

<table class="table">
      <%	 @bookmarks.each do |bookmark| %>
      <tr>
        <td width="80%">  <%= link_to("#{bookmark.description}", bookmark.url) %> </td>
        <td> <%= link_to("Edit", edit_bookmark_path(bookmark), class: 'btn btn-primary') %>   </td>
      </tr>
      <% end %>
</table>

